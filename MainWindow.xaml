<Window x:Class="WlanHostedNetwork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Name="Message" Margin="0" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center" FontSize="24" />
        <Button Name="Hint" Margin="30,15,30,30" Grid.Row="1" FontSize="24"/>
    </Grid>
</Window>
